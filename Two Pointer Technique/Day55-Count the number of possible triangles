class Solution {
    public int countTriangles(int arr[]) {
        // code here
        Arrays.sort(arr);
        int count = 0;
        int n = arr.length;
        
        for(int i = n - 1;i >= 2; --i){
            int  l = 0;
            int r = i - 1;
            while(l < r){
                if(arr[l] + arr[r] > arr[i]) count += (r-- - l);
                else ++l;
            }
        }
        return count;
    }
}
