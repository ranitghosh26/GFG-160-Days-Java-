class Solution {
    public boolean searchMatrix(int[][] mat, int x) {
        // code here
        int n = mat.length;
        int m=mat[0].length;
        int l = 0;
        int r = n*m-1;
        
        while(l<=r){
            int mid=(l+r)/2,val=mat[mid / m][mid % m];
            if(val ==x) return true;
            if(val < x) l=mid+1;
            else  r =mid-1;
        }
        return false;
    }
}
